[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace=true
indent_style=tab
indent_size=1
tab_width=4

[*.md]
trim_trailing_whitespace=false

[*.{yml,yaml}]
indent_style=space
indent_size=2

[*.{json,xml,svg}]
insert_final_newline=false

[.{version,repo}]
insert_final_newline=false
